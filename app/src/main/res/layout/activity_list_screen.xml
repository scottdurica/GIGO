<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".SummaryScreen">
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/frameLayout"
        android:layout_below="@+id/textView"
        android:layout_marginBottom="25dp">

        <ListView
            android:layout_width="wrap_content"
            android:id="@+id/lv_lists"
            android:paddingTop="15dp"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose a starter list"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/header"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp" />

    <TextView
        style="@style/silly_big_text"
        android:text="OR"
        android:id="@+id/textView2"
        android:gravity="center_horizontal"
        android:layout_below="@+id/frameLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="15dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Start new list"
            android:id="@+id/textView3"
            style="@style/silly_medium_text"
            android:layout_alignBottom="@+id/b_start_new_list"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="0dp"
            android:layout_marginRight="13dp" />

        <Button
            android:id="@+id/b_add_store"

            android:text="+"
            android:textColor="#009900"
            android:textSize="40dp"
            style = "?android:attr/borderlessButtonStyle"
            android:background="@drawable/button_shape"


            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_alignRight="@+id/textView2"
            android:layout_alignEnd="@+id/textView2" />

    </LinearLayout>

</RelativeLayout>
